<h1>
  <%=@recipe[0]["name"] %>
</h1>
<ul>
  <% @recipe[0].each do |type,info|%>
    <%if info != nil %>
      <li>
        <b><%=type %></b>: <%=info %>
      </li>
    <%end%>
  <% end %>
</ul>
<h2>
  Ingredients List
</h2>
<ul>
  <% @ingredients.each do |ingredient|%>
    <li>
      <%= ingredient["name"]  %>
    </li>
  <%end%>
</ul>

